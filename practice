/* Media Queries for Responsiveness */
@media (max-width: 768px) {
  .header-container {
    flex-direction: column; /* Stack elements vertically */
    align-items: flex-start; /* Align items to the start */
  }

  nav ul {
    flex-direction: column; /* Stack menu items vertically */
    gap: 20px; /* Space between items */
    display: none; /* Hide menu initially */
    width: 100%; /* Full width for the menu */
  }

  nav ul.active {
    display: flex; /* Show menu when active */
  }

  .hamburger {
    display: block; /* Show hamburger menu */
    cursor: pointer; /* Pointer cursor */
  }

  .hamburger span {
    display: block; /* Display each line */
    width: 25px; /* Hamburger line width */
    height: 3px; /* Hamburger line height */
    background: #ffffff; /* Hamburger line color */
    margin: 5px 0; /* Margin between lines */
  }

  .logo img {
    height: 40px; /* Adjust logo size for mobile */
    width: 40px; /* Adjust logo size for mobile */
  }

  nav ul li a {
    font-size: 18px; /* Adjust font size for mobile */
    padding: 10px; /* Adjust padding for mobile */
  }

  .auth-container {
    align-self: flex-end; /* Align auth section to the end */
    margin-top: 10px; /* Margin on top */
  }
}

@media (max-width: 480px) {
  nav ul {
    gap: 15px; /* Space between items for very small screens */
  }

  nav ul li a {
    font-size: 16px; /* Smaller font size for very small screens */
  }

  .profile-circle {
    width: 35px; /* Smaller profile image size */
    height: 35px; /* Smaller profile image size */
  }
}
