  color: #31969d;
  text-decoration: none;
}

.dropdown-content a:hover {
  background-color: #38adb5;
  color: white;
}

/* Hanging element styles */
/* Vertical Line */
.vertical-line {
  position: absolute;
  right: 50px; /* Align to the right corner */
  top: 100%; /* Place below the header */
  height: 150px; /* Height of the vertical line */
  border-left: 2px solid #38adb5; /* Vertical line color */
  transform-origin: top; /* Set the origin to the top for the pendulum effect */
  animation: halfSwing 2.5s ease-in-out infinite; /* Smooth pendulum swing */
}

/* Hanging Element (Logo/Image) */
.hanging-element {
  position: absolute;
  bottom: -68px; /* Position at the end of the vertical line */
  right: -15px; /* Center the image relative to the vertical line */
  width: 50px; /* Size of the hanging logo/image */
  height: auto;
  transform-origin: top; /* Set origin for pendulum motion */
  animation: halfSwing 2.5s ease-in-out infinite; /* Sync with the line swing */
}

/* Pendulum Half-Circular Swing Animation */
@keyframes halfSwing {
  /* 0% {
    transform: rotate(0deg);
  }  */
  0% {
    transform: rotate(15deg);
  } /* Swing to one side (15 degrees) */
  /* 50% {
    transform: rotate(0deg);
  } */
  50% {
    transform: rotate(-15deg);
  } /* Swing to the opposite side (-15 degrees) */
  /* 100% {
    transform: rotate(0deg);
  }  */
  100% {
    transform: rotate(15deg);
  }
}

.hanging-element img {
  width: 70px; /* Width of the hanging logo/image */
  height: auto; /* Maintain aspect ratio */
}

